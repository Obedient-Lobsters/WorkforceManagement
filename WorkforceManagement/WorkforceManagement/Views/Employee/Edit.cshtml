@model WorkforceManagement.Models.ViewModels.EmployeeEditViewModel

@{
    ViewData["Title"] = "Edit Employee";
    ViewData["test"] = new[] { 0, 1 };

}

<h2>@ViewData["Title"]</h2>

<h4>Employee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Employee.EmployeeId" />
            <div class="form-group">
                <label asp-for="Employee.FirstName" class="control-label"></label>
                <input asp-for="Employee.FirstName" class="form-control" readonly />
                <span asp-validation-for="Employee.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.LastName" class="control-label"></label>
                <input asp-for="Employee.LastName" class="form-control" />
                <span asp-validation-for="Employee.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.Email" class="control-label"></label>
                <input asp-for="Employee.Email" class="form-control" readonly />
                <span asp-validation-for="Employee.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Computers" class="control-label"></label>
                <select asp-for="Employee.Computer.ComputerId" asp-items="@Model.Computers"></select>
            </div>
            <div class="form-group">
                <label asp-for="Departments" class="control-label"></label>
                <select asp-for="Employee.DepartmentId" asp-items="@Model.Departments"></select>
            </div>
            @*<div class="form-group">
            <label asp-for="Exercises" class="control-label"></label>
            <select asp-for="@ViewData["test"]" asp-items="@Model.Exercises"></select>
        </div>*@
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
